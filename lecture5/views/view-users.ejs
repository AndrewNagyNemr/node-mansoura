<%- include("includes/head") %>
    <% if(users.length===0){%>
        <h1>No Users</h1>
        <% }else{ %>

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Address</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let user of users){ %>
                        <tr>
                            <td>
                                <%= user.firstName %>
                            </td>
                            <td>
                                <%= user.lastName %>
                            </td>
                            <td>
                                <%= user.address %>
                            </td>
                            <td>
                                <a href="<%= `/users/edit/${user._id}` %>" class="btn btn-warning">edit</a>
                            </td>
                            <td>
                                <a href="<%= `/users/del/${user._id}` %>" class="btn btn-danger">del</a>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
            <% } %>
                <a href="/" class="btn btn-primary">Back</a>
                <%- include("includes/tail") %>